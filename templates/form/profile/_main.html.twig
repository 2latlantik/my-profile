{% include 'form/profile/_title.html.twig'
    with {
    'title': 'title.profile.identity'
}
    only
%}
<div class="profile--main">
    <div class="profile--main--picture" >
        {{ form_row(profilePicture) }}
    </div>
    <div class="profile--main--data">
        <div>
            <div class="row">
                <div class="col-sm">{{ form_row(surname) }}</div>
                <div class="col-sm">{{ form_row(name) }}</div>
            </div>
            <div class="row">
                <div class="col-sm">{{ form_row(birthDate) }}</div>
                <div class="col-sm">{{ form_row(gender) }}</div>
            </div>
            <div class="row">
                <div class="col-sm">{{ form_row(postalCode) }}</div>
                <div class="col-sm">{{ form_row(city) }}</div>
            </div>
            {{ form_row(presentation) }}
        </div>
    </div>
</div>